[user]
	name = {{ .chezmoi.group }}
[core]
	autocrlf = true
	editor = vim
[credential "https://github.com"]
	useHttpPath = true
[credential]
{{ if eq .headless true }}
	credentialStore = cache
{{ end }}
	helper = manager-core

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
  
[color "branch"]
  current = green
  remote = yellow

[merge]

	# Include summaries of merged commits in newly created merge commit messages
	log = true

[commit]
	gpgsign = true
